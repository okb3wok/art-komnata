{% extends "./base.twig" %}

{% block content %}
<div class="gallery">
    <div class="wrapper">
        <h1>{{ title }}</h1>

        <div class="gallery__meta">
            <a href="{{ site_url }}">Назад на главную</a>
        </div>

        <div class="gallery__list">
            {% for key, item in content %}
                <div class="gallery__item">
                    <a href="{{ site_url }}{{ key }}/">
                        <div class="gallery__item-img">
                            <img loading="lazy" src="/photos/{{ key }}/thumbs/{{ item.thumb }}" alt="{{ item.title }}" />
                        </div>
                        <div class="gallery__item-caption">{{ item.title }}</div>
                        <h2>Альбом "{{ item.title }}"</h2>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
